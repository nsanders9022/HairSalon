@{
  Layout="Shared/_Layout.cshtml";
}
<h1>All Clients</h1>
<hr />
<h2>Clients:</h2>
@if (@Model.Count == 0)
{
  <p>No clients have been added yet!</p>
}
else
{
  <ul>
    @foreach (var client in Model)
    {
      <li><a href='/clients/@client.GetId()'>@client.GetName()</a> |  <a href="/client/edit/@client.GetId()">Edit</a>  | <a href="/client/delete/@client.GetId()">Delete</a></li>
    }
  </ul>
  <!-- <form action="/clients/delete" method="post">
    <button type="submit">Clear all clients</button>
  </form> -->
}
<p><a href="/clients/new">Add a new client</a></p>
<p><a href="/">Return home</a></p>

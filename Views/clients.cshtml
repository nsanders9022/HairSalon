@{
  Layout="Shared/_Layout.cshtml";
}
<h1>All Clients</h1>
<hr />
@if (@Model.Count == 0)
{
  <p>No clients have been added yet!</p>
}
else
{
  <ul>
    @foreach (var client in @Model)
    {
      <li><a href='/clients/@client.GetId()' class="name">@client.GetName()</a></li>
      <li><a href="/client/edit/@client.GetId()">Edit</a>  | <a href="/client/delete/@client.GetId()">Delete</a></li>
    }
  </ul>
  <!-- <form action="/clients/delete" method="post">
    <button type="submit">Clear all clients</button>
  </form> -->
}
<h5><a href="/clients/new">Add a new client</a></h5>
<h5><a href="/">Return home</a></h5>

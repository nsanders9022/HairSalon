@{
  Layout="Shared/_Layout.cshtml";
}

<h1>All Stylists</h1>
<hr />
<h2>Stylists:</h2>
<ul>
  @if (Model.Count != 0)
  {
    @foreach (var stylist in Model)
    {
      <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a> | <a href="/stylist/edit/@stylist.GetId()">Edit</a> | <a href="/stylist/delete/@stylist.GetId()">Delete</a></li>
    }
  }
  else
  {
      <p>No stylists have been added</p>
  }
</ul>
<h5><a href="/stylists/new">Add new stylist</a></h5>
<h5><a href="/">Go back to the homepage</a></h5>
